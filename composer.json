{
    "name": "hypervel/mail",
    "type": "library",
    "description": "The mail package for Hypervel.",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "mail",
        "swoole",
        "hypervel"
    ],
    "authors": [
        {
            "name": "Albert Chen",
            "email": "albert@hypervel.org"
        }
    ],
    "support": {
        "issues": "https://github.com/hypervel/components/issues",
        "source": "https://github.com/hypervel/components"
    },
    "autoload": {
        "psr-4": {
            "Hypervel\\Mail\\": "src/"
        }
    },
    "require": {
        "php": "^8.2",
        "hyperf/collection": "3.2.x-dev",
        "hyperf/conditionable": "3.2.x-dev",
        "hyperf/stringable": "3.2.x-dev",
        "hyperf/macroable": "3.2.x-dev",
        "hyperf/di": "3.2.x-dev",
        "hypervel/support": "dev-edge-hyperf3.2",
        "hypervel/filesystem": "dev-edge-hyperf3.2",
        "hypervel/object-pool": "dev-edge-hyperf3.2",
        "league/commonmark": "^2.2",
        "psr/log": "^1.0|^2.0|^3.0",
        "symfony/mailer": "^6.2",
        "tijsverkoyen/css-to-inline-styles": "^2.2.5"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hyperf": {
            "config": "Hypervel\\Mail\\ConfigProvider"
        },
        "branch-alias": {
            "dev-main": "0.2-dev"
        }
    },
    "suggest": {
        "aws/aws-sdk-php": "Required to use the SES mail driver (^3.235.5).",
        "symfony/http-client": "Required to use the Symfony API mail transports (^6.2).",
        "symfony/mailgun-mailer": "Required to enable support for the Mailgun mail transport (^6.2).",
        "symfony/postmark-mailer": "Required to enable support for the Postmark mail transport (^6.2)."
    }
}
